              <div class="card-body">
                <form>
                  <div class="row">
                    <div class="col-sm-6">
                      <!-- text input -->
                      <div class="form-group">
                        <label>Website Title</label>
                        <input type="text" id="updateWebTitle" class="form-control" placeholder="Enter New Website Title..">
                      </div>
                    </div>
                    <div class="col-sm-6">
                      <div class="form-group">
                        <label>Current Website Title</label>
                        <input type="text" id="currentWebTitle" class="form-control"
                        value="{{data.websiteTitle}}" disabled="">
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-sm-6">
                      <!-- text input -->
                      <div class="form-group">
                        <label>Homepage Title</label>
                        <input type="text" id="updateHomeTitle" class="form-control" placeholder="Enter New Homepage Title..">
                      </div>
                    </div>
                    <div class="col-sm-6">
                      <div class="form-group">
                        <label>Current Homepage Title</label>
                        <input type="text" id="currentHomeTitle" class="form-control" value="{{data.homepageTitle}}" disabled="">
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-sm-6">
                      <!-- textarea -->
                      <div class="form-group">
                        <label>Homepage Description</label>
                        <textarea class="form-control" id="updateHomeDescription" rows="3" placeholder="Enter New Homepage Description.."></textarea>
                      </div>
                    </div>
                    <div class="col-sm-6">
                      <div class="form-group">
                        <label>Current Homepage Description</label>
                        <textarea class="form-control" id="currentHomeDescription" rows="3" disabled="">{{data.homepageDescription}}</textarea>
                      </div>
                    </div>
                  </div>
                   <div class="row">
                    <div class="col-sm-5">
                      <div class="form-group">
                        <lable><b>Leaderboard's Status</b></lable>
                      </div>
                    </div>
                    <div class="col-sm-1">
                      <div class="form-group">
                       <div id="leaderboardSwitch" class="custom-control custom-switch">
                        
                       </div>
                      </div>
                    </div>
                    <div class="col-sm-5">
                      <div class="form-group">
                        <lable><b>Add Dummy User's</b></lable>
                      </div>
                    </div>
                    <div class="col-sm-1">
                      <div class="form-group">
                       <button type="button" id="addUsers" class="btn btn-block btn-primary btn-xs">ADD</button>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <button type="button" id="updateBtn" class="btn btn-primary btn-block btn-sm">Upadte</button>
                    <button type="button" id="cancel" class="btn btn-outline-secondary btn-block btn-sm">Cancel</button>
                    
                  </div>
                </form>
              </div>
              <!-- /.card-body -->
            </div>
