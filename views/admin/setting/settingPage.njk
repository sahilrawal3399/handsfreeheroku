<script>
let statusValue = '';
if ('{{data.leaderboardStatus}}' == 'true') {
  statusValue = 'checked';
}else{
 statusValue = '';
}
let leaderboardSwitch = ` <input type="checkbox" class="custom-control-input" id="leaderboardStatus" `+statusValue+`>
                         <label class="custom-control-label" for="leaderboardStatus"></label>`

$('#leaderboardSwitch').html(leaderboardSwitch);

  
  $("#addUsers").click(function(){
    $.ajax({
      url :'/addDummyUsers',
      method : 'POST',
      success : function(res){
        if(res.status == 'success'){
        alert(res.message);
        }else{
          alert(res.message);
        }
      }
    });
  });


// [ Fetching Updated Or Current Settings ]
$("#updateBtn").click(function(){
 let websiteTitle = $('#updateWebTitle').val();
 let homepageTitle = $('#updateHomeTitle').val();
 let homepageDescription = $('#updateHomeDescription').val();

 if ($.trim(websiteTitle).length == 0) {
  websiteTitle = $('#currentWebTitle').val();
 }

 if ($.trim(homepageTitle).length == 0) {
  homepageTitle = $('#currentHomeTitle').val();
 }

 if ($.trim(homepageDescription).length == 0) {
  homepageDescription = $('#currentHomeDescription').val();
 }

 let leaderboardStatus ='';
 if($("#leaderboardStatus").prop('checked') == true){
    leaderboardStatus = true;
 }else{
    leaderboardStatus = false;
 }

// [ POST Method For updating New Values ]
            $.ajax({
                url: "/admin/setting",
                method: "POST",
                data: {
                    websiteTitle : websiteTitle,
                    homepageTitle : homepageTitle,  
                    homepageDescription : homepageDescription,
                    leaderboardStatus : leaderboardStatus 
                },
                success: function(resp){

                    if(resp.status == 'success'){
                        toastr.success(resp.message);
                        setTimeout(function(){
                            location.reload();
                        },1000);
                    }else {
                        toastr.error(resp.message);
                    }
                }
            });

});

// [ Cancel Button ]
$("#cancel").click(function(){
   toastr.info('Nothing Updated!!');
   setTimeout(function(){
       window.location.replace('/admin/dashboard');
   },1000);  
});
</script>
</body>
</html>



